<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeStreak">
        
        <!-- Login Activity - Entry Point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:noHistory="true">
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
        </activity>
        
        <!-- Main Activity with Navigation -->
        <activity
            android:name=".MainActivityWithNav"
            android:exported="true"
            android:launchMode="singleTask">
        </activity>
        
        <activity
            android:name=".ModernMainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Problems Activity -->
        <activity
            android:name=".ProblemsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ModernMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ModernMainActivity" />
        </activity>
        
        <!-- Problem Detail Activity -->
        <activity
            android:name=".ProblemDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ProblemsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProblemsActivity" />
        </activity>
        
        <!-- AI Chat Activity -->
        <activity
            android:name=".AIChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ProblemDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProblemDetailActivity" />
        </activity>
        
        <!-- AI Solution Activity -->
        <activity
            android:name=".AISolutionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ProblemDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProblemDetailActivity" />
        </activity>
        
        <!-- Google Architecture Example Activity -->
        <activity
            android:name=".GoogleArchitectureExampleActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="Google AI Edge Gallery Demo">
        </activity>
        
        <!-- Gmail Auth Example Activity -->
        <activity
            android:name=".GmailAuthExampleActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="Gmail Authentication Demo">
        </activity>
        
        <!-- Company Problems Activity -->
        <activity
            android:name=".CompanyProblemsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ModernMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ModernMainActivity" />
        </activity>
        
        <!-- Daily Notification Receiver -->
        <receiver
            android:name=".DailyNotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.codestreak.MORNING_NOTIFICATION" />
                <action android:name="com.example.codestreak.EVENING_NOTIFICATION" />
            </intent-filter>
        </receiver>
        
        <!-- Boot Receiver to reschedule notifications after device restart -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        
        <!-- WorkManager Foreground Service for Downloads -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        
    </application>

</manifest>