<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/marker_background"
    android:padding="12dp"
    android:gravity="center">

    <TextView
        android:id="@+id/markerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textColor="@color/leetcode_text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/markerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 problems"
        android:textColor="@color/leetcode_text_secondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/markerPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47.4%"
        android:textColor="@color/leetcode_orange"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp" />

</LinearLayout>
