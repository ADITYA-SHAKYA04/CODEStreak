<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/leetcode_dark_bg"
    android:padding="32dp"
    android:gravity="center">

    <!-- Logo and Title -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CodeStreak"
            android:textColor="@color/leetcode_text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your LeetCode journey"
            android:textColor="@color/leetcode_text_secondary"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Login Form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/leetcode_card_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:textColor="@color/leetcode_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in to continue tracking your progress"
                android:textColor="@color/leetcode_text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />

            <!-- LeetCode Username Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/leetcode_dark_bg"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/leetcode_text_secondary"
                app:boxStrokeColor="@color/leetcode_orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/leetcodeUsernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LeetCode Username"
                    android:textColor="@color/leetcode_text_primary"
                    android:textColorHint="@color/leetcode_text_secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Google Sign-In Button -->
            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <!-- Manual Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/manualLoginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue with Username"
                android:textColor="@color/leetcode_text_primary"
                android:backgroundTint="@color/leetcode_orange"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Skip Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/skipLoginButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Skip for now"
                android:textColor="@color/leetcode_text_secondary"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loginProgressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:indeterminateTint="@color/leetcode_orange"
        android:visibility="gone" />

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By continuing, you agree to sync your LeetCode data"
        android:textColor="@color/leetcode_text_secondary"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
