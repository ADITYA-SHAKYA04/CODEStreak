<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <!-- HOME -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp">

            <!-- Active Indicator Background -->
            <View
                android:id="@+id/home_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.12"
                android:background="@drawable/circle_medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home"
                app:tint="@color/accent_secondary" />

        </FrameLayout>

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1.0"
            android:text="HOME"
            android:textColor="@color/accent_secondary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- PROBLEMS -->
    <LinearLayout
        android:id="@+id/nav_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="2dp">

            <!-- Active Indicator Background -->
            <View
                android:id="@+id/progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.12"
                android:background="@drawable/circle_medium"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/progress_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_problems"
                app:tint="@color/accent_secondary" />

        </FrameLayout>

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1.0"
            android:text="PROBLEMS"
            android:textColor="@color/accent_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- CARDS -->
    <LinearLayout
        android:id="@+id/nav_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="2dp">

            <!-- Active Indicator Background -->
            <View
                android:id="@+id/cards_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.12"
                android:background="@drawable/circle_medium"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/cards_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cards"
                app:tint="@color/accent_secondary" />

        </FrameLayout>

        <TextView
            android:id="@+id/cards_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1.0"
            android:text="CARDS"
            android:textColor="@color/accent_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- REVISION -->
    <LinearLayout
        android:id="@+id/nav_revision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="2dp">

            <!-- Active Indicator Background -->
            <View
                android:id="@+id/revision_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.12"
                android:background="@drawable/circle_medium"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/revision_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_revision"
                app:tint="@color/accent_secondary" />

        </FrameLayout>

        <TextView
            android:id="@+id/revision_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1.0"
            android:text="REVISION"
            android:textColor="@color/accent_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
