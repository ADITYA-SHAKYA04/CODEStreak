<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/leetcode_card_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/popup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 15, 2025"
            android:textColor="@color/leetcode_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_problems_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 problems"
            android:textColor="@color/leetcode_text_secondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="solved"
            android:textColor="@color/leetcode_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
