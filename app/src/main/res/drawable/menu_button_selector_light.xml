<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FF8F00"
                android:endColor="#FFA116"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="2dp" 
                android:color="#FFB84D" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FFA116"
                android:endColor="#FFB84D"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="2dp" 
                android:color="#FF8F00" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FFA116"
                android:endColor="#FFB84D"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp" 
                android:color="#FF8F00" />
        </shape>
    </item>
</selector>
