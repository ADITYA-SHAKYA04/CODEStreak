<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#1A000000" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    
    <!-- Main Background -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/surface_primary" />
            <stroke android:width="1dp" android:color="@color/accent_secondary" />
        </shape>
    </item>
    
</layer-list>
